set(VER_MAJOR 0)
set(VER_MINOR 6)
set(VER_BUGFIX 2)
set(VER_BUILD 5)

if(${CMAKE_BUILD_TYPE} STREQUAL "Debug")
	set(VER_STATUS "debug")
else()
	set(VER_STATUS "release")
endif()

set(PRJ_VERSION ${VER_MAJOR}.${VER_MINOR}.${VER_BUGFIX}.${VER_BUILD})

add_compile_definitions(APP_VERSION=\"${PRJ_VERSION}\")

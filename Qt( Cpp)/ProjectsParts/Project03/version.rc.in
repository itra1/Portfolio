IDI_ICON1 ICON "@CMAKE_CURRENT_SOURCE_DIR@/res/images/AppLogoColor.ico"

// version.rc.in
#define VER_FILEVERSION             @VER_MAJOR@,@VER_MINOR@,@VER_BUGFIX@,@VER_BUILD@
#define VER_FILEVERSION_STR         "@VER_MAJOR@.@VER_MINOR@.@VER_BUGFIX@.@VER_BUILD@\0"

#define VER_PRODUCTVERSION          @VER_MAJOR@,@VER_MINOR@,@VER_BUGFIX@,@VER_BUILD@
#define VER_PRODUCTVERSION_STR      "@VER_MAJOR@.@VER_MINOR@.@VER_BUGFIX@.@VER_BUILD@\0"
#define VER_FILEDESCRIPTION_STR     "@PRJ_NAME@"
#define VER_INTERNALNAME_STR        "@PRJ_NAME@"
#define VER_LEGALCOPYRIGHT_STR      "@PRJ_COPYRITE@"
#define VER_ORIGINALFILENAME_STR    "@PRJ_NAME@.exe"
#define VER_PRODUCTNAME_STR         "@PRJ_NAME@"
//

1 VERSIONINFO
FILEVERSION VER_FILEVERSION
PRODUCTVERSION VER_PRODUCTVERSION
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904E4"
    BEGIN
			VALUE "FileVersion",				VER_FILEVERSION_STR
			VALUE "FileDescription",    VER_FILEDESCRIPTION_STR
			VALUE "ProductVersion",			VER_PRODUCTVERSION_STR
			VALUE "FileDescription",    VER_FILEDESCRIPTION_STR
			VALUE "InternalName",       VER_INTERNALNAME_STR
			VALUE "LegalCopyright",     VER_LEGALCOPYRIGHT_STR
			VALUE "OriginalFilename",   VER_ORIGINALFILENAME_STR
			VALUE "ProductName",        VER_PRODUCTNAME_STR
    END
  END
  /* For some reason the ProductVersion would not appear unless I add the following section: VarFileInfo */
  BLOCK "VarFileInfo"
  BEGIN
		VALUE "Translation", 0x0419, 1252
  END
END
